@model Jogo

<form asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="Nome">Nome</label>
		<input asp-for="Nome" class="form-control" />
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Descricao">Descrição</label>
		<input asp-for="Descricao" class="form-control" />
		<span asp-validation-for="Descricao" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Generos">Gêneros</label>
		<input asp-for="Generos" class="form-control" />
		<span asp-validation-for="Generos" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Plataforma">Plataforma</label>
		<input asp-for="Plataforma" class="form-control" />
		<span asp-validation-for="Plataforma" class="text-danger"></span>
	</div>
	<div class="form-group" style="margin-top:10px">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
</form>