@model Jogo
<div class="mb-4">


	<form asp-action="Add" method="post">
		<div class="row">
			<div class="col-4">
				<label asp-for="Nome">Nome</label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="col-8">
				<label asp-for="Descricao">Descrição</label>
				<input asp-for="Descricao" class="form-control" />
				<span asp-validation-for="Descricao" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-6">
				<label asp-for="Generos">Gêneros</label>
				<input asp-for="Generos" class="form-control" />
				<span asp-validation-for="Generos" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="Plataforma">Plataforma</label>
				<input asp-for="Plataforma" class="form-control" />
				<span asp-validation-for="Plataforma" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group" style="margin-top:10px">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
</div>