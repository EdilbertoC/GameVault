@model Jogo

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Generos</h6>
        <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Plataforma</h6>
        <p class="card-text">@Model.Descricao</p>
        @if (Model.ReviewId > 0){
            <a href="#" class="card-link">Ver a analise</a>
        }else{
            <a href="#" class="card-link">Avaliar</a>
        }
        <a href="#" class="card-link text-danger">Excluir</a>
    </div>
</div>
